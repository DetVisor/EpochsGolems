<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef ParentName="DV_BaseGolem">
		<defName>DV_Golem_Component</defName>
		<label>component golem</label>
		<description>A thin, short clay golem with gears and other mechanical parts stuck inside of it, rendered alive by an anima doll. Despite being particularly small, it is capable of crafting basic things like components. Though it might need a stool.</description>
		<statBases>
			<MoveSpeed>3.4</MoveSpeed>
			<ArmorRating_Blunt>0.20</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.20</ArmorRating_Sharp>
			<PsychicSensitivity>0.25</PsychicSensitivity>
		</statBases>
		<tools>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>6</power>
				<cooldownTime>2.6</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
			</li>
		</tools>
		<race>
			<body>DV_GolemBodyDef</body>
			<baseBodySize>0.75</baseBodySize>
			<lifeStageAges Inherit="False">
				<li>
                  <def>DV_Lifestage_Golem</def>
					<minAge>0</minAge>
                    <soundWounded>Pawn_Tortoise_Wounded</soundWounded>
                    <soundDeath>Pawn_Tortoise_Death</soundDeath>
                    <soundCall>Pawn_Tortoise_Call</soundCall>
                    <soundAngry>Pawn_Tortoise_Angry</soundAngry>
				</li>
			</lifeStageAges>
		</race>
		<butcherProducts>
			<DV_Clay>50</DV_Clay>
			<DV_Exotic_AnimaDoll>1</DV_Exotic_AnimaDoll>
		</butcherProducts>
		<comps>
			<li Class="Asimov.CompProperties_Automaton">
				<canUseRanged>false</canUseRanged>
				<canUseMelee>true</canUseMelee>
				<corpseEdible>false</corpseEdible>
				<corpseRots>false</corpseRots>
				<immuneToDisease>true</immuneToDisease>
				<huntTarget>true</huntTarget>
				<clearPassions>true</clearPassions>
				<flattenSkills>true</flattenSkills>
				<skillGainMulti>0.2</skillGainMulti>
				<skillLossMulti>0</skillLossMulti>
				<defaultSkillLevel>0</defaultSkillLevel>
				<enabledWorkTypes>
				    <li>Firefighter</li>
			        <li>Crafting</li>
					<li>Smithing</li>
				</enabledWorkTypes>
				<skillSettings>
					<li>
						<skill>Crafting</skill>
						<level>8</level>
					</li>
				</skillSettings>
			</li>
			<li Class="Asimov.CompProperties_RecolourablePawn">
				<channelOne>true</channelOne>
				<channelTwo>false</channelTwo>
				<skinColorPairs>
					<li>
						<colorOne>(154, 107, 80)</colorOne>
						<colorTwo>(154, 107, 80)</colorTwo>
						<weight>100</weight>
					</li>
				</skinColorPairs>
			</li>
		</comps>
	</ThingDef>

	<PawnKindDef ParentName="AsimovAutomatonKindBase">
		<defName>DV_Golem_Component</defName>
		<label>component golem</label>
		<race>DV_Golem_Component</race>
		<combatPower>10</combatPower>
		<isFighter>true</isFighter>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/ComponentGolem/Body/ComponentGolem</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>1.5</drawSize>
					<shadowData>
						<volume>(0.3, 0.4, 0.3)</volume>
					</shadowData>
				</bodyGraphicData>
			</li>
		</lifeStages>
	</PawnKindDef>

</Defs>